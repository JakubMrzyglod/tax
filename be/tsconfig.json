{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@root": ["./src"],
      "@constants/*": ["src/constants/*"],
      "@common/*": ["src/common/*"],
      "@functions/*": ["src/functions/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
